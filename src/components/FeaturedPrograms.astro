---
const programs = [
  {
    title: 'Auxiliar Agropecuario',
    description: 'Formación técnica en producción agrícola y pecuaria para jóvenes rurales.',
    image: 'https://images.pexels.com/photos/2886937/pexels-photo-2886937.jpeg?auto=compress&cs=tinysrgb&w=1600',
    icon: '🌱',
    url: '/programas/auxiliar-agropecuario'
  },
  {
    title: 'Capacitación para Agricultores',
    description: 'Programas de capacitación para agricultores locales en técnicas modernas y sostenibles.',
    image: 'https://images.pexels.com/photos/2132250/pexels-photo-2132250.jpeg?auto=compress&cs=tinysrgb&w=1600',
    icon: '🚜',
    url: '/programas/capacitacion-agricultores'
  },
  {
    title: 'Formación para Amas de Casa',
    description: 'Capacitación en procesamiento de alimentos, nutrición y emprendimiento rural.',
    image: 'https://images.pexels.com/photos/6941042/pexels-photo-6941042.jpeg?auto=compress&cs=tinysrgb&w=1600',
    icon: '🏡',
    url: '/programas/formacion-amas-casa'
  },
  {
    title: 'Talleres de Proyectos Rurales',
    description: 'Talleres prácticos para el desarrollo de proyectos productivos en comunidades rurales.',
    image: 'https://images.pexels.com/photos/2069931/pexels-photo-2069931.jpeg?auto=compress&cs=tinysrgb&w=1600',
    icon: '🔨',
    url: '/programas/talleres-proyectos-rurales'
  }
];
---

<section class="py-16 bg-neutral-100">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-3 text-primary-dark">Programas Académicos</h2>
    <p class="text-center text-neutral-600 max-w-2xl mx-auto mb-12">Ofrecemos diversos programas de formación para el desarrollo de competencias en el sector agropecuario y forestal.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {programs.map(program => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:-translate-y-2 group">
          <div class="relative h-48 overflow-hidden">
            <img 
              src={program.image} 
              alt={program.title} 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute top-4 right-4 bg-primary text-white w-10 h-10 rounded-full flex items-center justify-center text-xl">
              {program.icon}
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 text-primary-dark">{program.title}</h3>
            <p class="text-neutral-600 mb-4">{program.description}</p>
            <a 
              href={program.url} 
              class="inline-flex items-center text-primary font-medium hover:text-primary-light"
            >
              Más información
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="/programas" 
        class="inline-flex items-center bg-primary hover:bg-primary-light text-white font-medium py-3 px-6 rounded-md transition-colors duration-300"
      >
        Ver todos los programas
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>