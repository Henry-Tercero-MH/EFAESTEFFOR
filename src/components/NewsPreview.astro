---
const latestNews = [
  {
    title: 'Nuevas tecnologías implementadas en cultivos de la región',
    date: '15 de abril, 2025',
    excerpt: 'Se implementaron nuevas tecnologías de riego y monitoreo en los cultivos experimentales gracias al apoyo de USAID.',
    image: 'https://images.pexels.com/photos/1692073/pexels-photo-1692073.jpeg?auto=compress&cs=tinysrgb&w=1600',
    url: '/noticias/nuevas-tecnologias-implementadas'
  },
  {
    title: 'Graduación de estudiantes del programa de Auxiliar Agropecuario',
    date: '28 de marzo, 2025',
    excerpt: '45 estudiantes recibieron su diploma como Auxiliares Agropecuarios, listos para contribuir al desarrollo rural.',
    image: 'https://images.pexels.com/photos/5212345/pexels-photo-5212345.jpeg?auto=compress&cs=tinysrgb&w=1600',
    url: '/noticias/graduacion-estudiantes-marzo-2025'
  },
  {
    title: 'Taller de desarrollo comunitario inicia en San Jerónimo',
    date: '10 de marzo, 2025',
    excerpt: 'El taller busca fortalecer las capacidades de liderazgo y gestión de proyectos en la comunidad.',
    image: 'https://images.pexels.com/photos/8067766/pexels-photo-8067766.jpeg?auto=compress&cs=tinysrgb&w=1600',
    url: '/noticias/taller-desarrollo-comunitario'
  }
];
---

<section class="py-16 bg-neutral-100">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-3 text-primary-dark">Últimas Noticias</h2>
    <p class="text-center text-neutral-600 max-w-2xl mx-auto mb-12">Mantente informado sobre nuestras actividades, eventos y logros más recientes.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {latestNews.map(news => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:-translate-y-2">
          <a href={news.url} class="block overflow-hidden h-48 relative">
            <img 
              src={news.image} 
              alt={news.title} 
              class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
            />
          </a>
          <div class="p-6">
            <div class="text-sm text-neutral-500 mb-2">{news.date}</div>
            <h3 class="text-xl font-bold mb-2 text-primary-dark">
              <a href={news.url} class="hover:text-primary transition-colors duration-300">{news.title}</a>
            </h3>
            <p class="text-neutral-600 mb-4">{news.excerpt}</p>
            <a 
              href={news.url} 
              class="inline-flex items-center text-primary font-medium hover:text-primary-light"
            >
              Leer más
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="/noticias" 
        class="inline-flex items-center bg-primary hover:bg-primary-light text-white font-medium py-3 px-6 rounded-md transition-colors duration-300"
      >
        Ver todas las noticias
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>